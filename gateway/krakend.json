{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "krakend-gateway",
    "port": 8081,
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "extra_config": {
        "github_com/devopsfaith/krakend/logging": {
            "level": "DEBUG",
            "prefix": "[KRAKEND]",
            "syslog": false,
            "stdout": true
        },
        "github_com/devopsfaith/krakend/validator": {
            "name": "api-key",
            "algorithm": "HS256",
            "key": "mon_super_secret"
        },
        "github_com/devopsfaith/krakend/proxy": {
            "static_headers": {
                "X-API-KEY": "my-secret-key"
            }
        },
        "github_com/devopsfaith/krakend/router": {
            "custom_http_headers": {
            "X-Powered-By": "KrakenD",
            "X-Gateway": "LOG430-Gateway"
            }
        },
    "endpoints": [
        {
            "endpoint": "/api/produits/{path}",
            "method": "GET",
            "output_encoding": "json",
            "extra_config": {},
            "backend": [
                {
                    "url_pattern": "/{path}",
                    "host": [
                        "http://localhost:8004"
                    ]
                }
            ]
        },
        {
            "endpoint": "/api/stock/{path}",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/{path}",
                    "host": [
                        "http://localhost:8006",
                        "http://localhost:8016"
                    ],
                    "extra_config": {
                        "github.com/devopsfaith/krakend/proxy": {
                            "load_balancer": {
                                "name": "round_robin"
                            }
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/api/utilisateurs/{path}",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/{path}",
                    "host": [
                        "http://localhost:8007"
                    ]
                }
            ]
        },
        {
            "endpoint": "/api/ventes/{path}",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/{path}",
                    "host": [
                        "http://localhost:8008"
                    ]
                }
            ]
        },
        {
            "endpoint": "/api/client/{path}",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/{path}",
                    "host": [
                        "http://localhost:8001"
                    ]
                }
            ]
        },
        {
            "endpoint": "/api/commande/{path}",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/{path}",
                    "host": [
                        "http://localhost:8002"
                    ]
                }
            ]
        },
        {
            "endpoint": "/api/panier/{path}",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/{path}",
                    "host": [
                        "http://localhost:8003"
                    ]
                }
            ]
        },
        {
            "endpoint": "/api/rapport/{path}",
            "method": "GET",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/{path}",
                    "host": [
                        "http://localhost:8005"
                    ]
                }
            ]
        }
    ]
}